<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_game_selection"
    android:background="@color/colorBoardLight"
    tools:context=".GameSelection">

    <TextView
        android:id="@+id/nameC2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Matteo Sanna"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo2" />

    <Button
        android:id="@+id/playFriendsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="388dp"
        android:background="@drawable/sample"
        android:scaleX="0"
        android:scaleY="0"
        android:text="PLAY AGAINST A FRIEND"
        android:textColor="@color/black"
        app:iconTint="#FFEB88"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tutorialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/sample"
        android:scaleX="0"
        android:scaleY="0"
        android:text="TUTORIAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playFriendsButton" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="283dp"
        android:layout_height="59dp"
        android:layout_marginTop="336dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chesstext" />

    <LinearLayout
        android:id="@+id/colorChoice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.867">

        <Button
            android:id="@+id/colorWater"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:scaleX="0"
            android:scaleY="0"
            android:background="@drawable/sample_blue"
            android:text="" />

        <Button
            android:id="@+id/colorClassic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="0"
            android:scaleY="0"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sample_classic"
            android:text="" />

        <Button
            android:id="@+id/colorRed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="0"
            android:scaleY="0"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sample_red"
            android:text="" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>